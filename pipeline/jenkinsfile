pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                // Clone the repository
               sh "git clone ' https://github.com/raveenagaikwad2022/elk-stack.git' "
            }
        }
        
        stage('Build Containers') {
            steps {
                // Build Docker containers using docker-compose
                script {
                    sh 'docker-compose -f docker-compose.yml up -d'
                }
            }
        }

        stage('Run Logstash') {
            steps {
                // Run Logstash pipeline to process the robot logs
                script {
                    sh 'docker exec -it logstash logstash -f /elk-stack/logstash.conf'
                }
            }
        }

        stage('Verify Logs') {
            steps {
                // Validate if logs are being processed
                sh 'docker logs logstash'
            }
        }
        
        stage('Teardown') {
            steps {
                // Tear down the containers after the process
                script {
                    sh 'docker-compose down'
                }
            }
        }
    }

    post {
        always {
            // Cleanup and send notifications
            echo 'Process completed. Cleaning up...'
            sh 'docker-compose down'
        }
    }
}
