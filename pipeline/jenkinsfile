pipeline {
    agent any

    stages {

        stage('Clean Workspace') {
            steps {
                // Clean the workspace
                cleanWs()
            }
        }
        stage('Checkout Repository') {
            steps {
                // Clone the repository
                // bat "git clone https://github.com/raveenagaikwad2022/elk-stack.git"
                checkout scm
            }
        }

        stage('Build Containers') {
            steps {
                // Build Docker containers using docker-compose
                script {
                     dir('elk-stack') { 
                        // List directory contents
                        bat 'dir'
                        // Bring down any running containers
                        bat 'docker-compose down'
                        // Start up the containers in detached mode
                        bat 'docker-compose up -d'
                        //check service running
                        def logs = bat(script: 'docker-compose logs kibana', returnStdout: true).trim()
                        echo logs
                    }
                }
            }
        }

        stage('Run Logstash') {
            steps {
                script {
                    // Start Logstash without nohup
                    bat 'docker-compose up -d logstash'
                    bat 'docker-compose up -d kibana'
                     bat 'docker-compose up -d grafana'
                      bat 'docker-compose up -d elasticsearch'
                    
                    // Optional: wait and check Logstash health
                    sleep(time: 180, unit: 'SECONDS')  // Adjust this as needed
                    bat 'docker-compose ps' // Check the status of the containers
                }
            }
        }


        // stage('Verify Logs') {
        //     steps {
        //         script{
        //             dir('elk-stack'){
        //              // Validate if logs are being processed
        //             sh 'docker logs logstash'
        //             }
        //         }
               
        //     }
        // }

        stage('Teardown') {
            steps {
                // Tear down the containers after the process
                script {
                    dir('elk-stack'){
                    bat 'docker-compose down'
                    }
                }
            }
        }
    }

    post {
        always {
            // Cleanup and send notifications
            echo 'Process completed. Cleaning up...'
            bat 'docker-compose down'
        }
    }
}
