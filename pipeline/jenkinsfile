pipeline {
    agent any

    stages {

        stage('Clean Workspace') {
            steps {
                // Clean the workspace
                cleanWs()
            }
        }
        stage('Checkout Repository') {
            steps {
                // Clone the repository
                // bat "git clone https://github.com/raveenagaikwad2022/elk-stack.git"
                checkout scm
            }
        }

        stage('Build Containers') {
            steps {
                // Build Docker containers using docker-compose
                script {
                    bat 'docker-compose -f docker-compose.yml up -d'
                }
            }
        }

        stage('Run Logstash') {
           steps {
              script {
                dir('elk-stack'){
               // Verify if logstash.conf exists
                sh 'docker exec logstash ls elk-stack/logstash.conf'
                // Run Logstash pipeline
                 sh 'docker exec logstash logstash -f /elk-stack/logstash.conf'
                  // Check Logstash logs for processing output
                 sh 'docker logs logstash'
                 }
                }
            }
         }


        stage('Verify Logs') {
            steps {
                script{
                    dir('elk-stack'){
                     // Validate if logs are being processed
                    sh 'docker logs logstash'
                    }
                }
               
            }
        }

        stage('Teardown') {
            steps {
                // Tear down the containers after the process
                script {
                    dir('elk-stack'){
                    bat 'docker-compose down'
                    }
                }
            }
        }
    }

    post {
        always {
            // Cleanup and send notifications
            echo 'Process completed. Cleaning up...'
            bat 'docker-compose down'
        }
    }
}
