pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                // Clone the repository
                bat "git clone https://github.com/raveenagaikwad2022/elk-stack.git"
            }
        }

        stage('Build Containers') {
            steps {
                // Build Docker containers using docker-compose
                script {
                    bat 'docker-compose -f docker-compose.yml up -d'
                }
            }
        }

        stage('Run Logstash') {
            steps {
                // Run Logstash pipeline to process the robot logs
                script {
                    bat 'docker exec logstash logstash -f /elk-stack/logstash.conf'
                }
            }
        }

        stage('Verify Logs') {
            steps {
                // Validate if logs are being processed
                bat 'docker logs logstash'
            }
        }

        stage('Teardown') {
            steps {
                // Tear down the containers after the process
                script {
                    bat 'docker-compose down'
                }
            }
        }
    }

    post {
        always {
            // Cleanup and send notifications
            echo 'Process completed. Cleaning up...'
            bat 'docker-compose down'
        }
    }
}
